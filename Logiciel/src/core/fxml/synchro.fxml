<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="core.controller.ControllerSynchro"
          prefHeight="400.0" prefWidth="800.0" alignment="CENTER">
    <VBox GridPane.rowIndex="1" spacing="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
        </padding>
        <HBox  alignment="CENTER" >
            <Label text="Synchronisation" ></Label>
        </HBox>
        <HBox >
            <Label text="Chemin Local : " fx:id="t" ></Label>
            <Label text="C://tets/pomme/salade" fx:id="s" ></Label>
        </HBox>
        <HBox >
            <Label text="Chemin Distant : " fx:id="z" ></Label>
            <Label text="/pomme/pierre" fx:id="w" ></Label>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Rechercher : "></Label>
            <TextField promptText="Rechercher..." minWidth="250" onKeyPressed="#search" fx:id="recherche"></TextField>
        </HBox>
    </VBox>
    <TableView maxHeight="300" maxWidth="700" GridPane.rowIndex="3" fx:id="files">
        <columns>
            <TableColumn fx:id="deleted" minWidth="100">
                <graphic>
                    <CheckBox fx:id="checkAll" onMouseClicked="#tickedNoTicked"></CheckBox>
                </graphic>
                <cellValueFactory><PropertyValueFactory property="selected"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Nom" minWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Taille" fx:id="activated" minWidth="100">
            <cellValueFactory><PropertyValueFactory property="size"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="DerniÃ¨re modification" fx:id="edited" minWidth="300">
                <cellValueFactory><PropertyValueFactory property="lastEdit"/></cellValueFactory>
            </TableColumn>
        </columns>
        <items>
        </items>
    </TableView>
    <HBox alignment="CENTER" GridPane.rowIndex="5">
        <padding>
            <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
        </padding>
        <Button text="Synchroniser" onMouseClicked="#synchro"></Button>
    </HBox>
</GridPane>
