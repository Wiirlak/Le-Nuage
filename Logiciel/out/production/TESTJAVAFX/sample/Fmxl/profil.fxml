<GridPane  xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Fmxl.ControllerProfil"
            prefHeight="400.0" prefWidth="600.0">
    <VBox styleClass="disgusting" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="400" alignment="CENTER" spacing="25">
        <VBox alignment="CENTER"  minWidth="350" HBox.hgrow="ALWAYS" maxWidth="450" fx:id="profilPicture">
            <ImageView fitHeight="128" fitWidth="128" onMouseClicked="#openExplorer" >
                <!--<image >
                    <Image url="@../profile-icon.png" />
                </image>-->
            </ImageView>
            <Label text="Modifier votre photo" onMouseClicked="#openExplorer"></Label>
        </VBox>

        <VBox  minWidth="350" HBox.hgrow="ALWAYS" spacing="50" maxWidth="450">
            <VBox>
                <Label text="Nom"></Label>
                <TextField promptText="Nom..." editable="false" styleClass="inputProfilCantEdit" text="Henry" ></TextField>
            </VBox>
                <VBox>
                <Label text="Prenom"></Label>
                <TextField promptText="Prenom..." editable="false" styleClass="inputProfilCantEdit" text="Salvamalomous"></TextField>
            </VBox>
            <VBox>
                <Label text="Email"></Label>
                <TextField promptText="Email..." styleClass="inputProfil"></TextField>
            </VBox>
        </VBox>
        <HBox alignment="CENTER"  minWidth="350" HBox.hgrow="ALWAYS">
            <Button text="Sauvegarder" styleClass="saveButton"></Button>
        </HBox>
    </VBox>

</GridPane >
